        "dotnet5.6",
        "dnxcore50",
        "portable-net45+win8"
      ]
    },

    "net451": {
      "frameworkAssemblies": {
        "System.Net.Http": "4.0.0.0",
        "System.Collections": "4.0.0.0"
      }
    }
  }
